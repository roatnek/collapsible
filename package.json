{
  "name": "collapsible",
  "description": "collapsible component",
  "private": true,
  "dependencies": {
    "babel-cli": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "http-server": "^0.11.1",
    "node-sass": "^4.8.3"
  },
  "scripts": {
    "start": "npm run serve && npm run dev",
    "serve": "http-server ./dist/ -o",
    "dev": "npm run watch-build-js && npm run watch-build-css",
    "build-js": "babel ./src/js/scripts.js -o ./dist/assets/js/scripts.js",
    "build-css": "node-sass --include-path scss ./src/css/styles.scss ./dist/assets/css/styles.css --output-style expanded",
    "watch-build-js": "babel -w ./src/js/scripts.js -o ./dist/assets/js/scripts.js",
    "watch-build-css": "node-sass -w --include-path scss ./src/css/styles.scss ./dist/assets/css/styles.css --output-style expanded"
  }
}
